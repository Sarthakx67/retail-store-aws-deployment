pipeline {
    agent { node { label 'AGENT-1' } }
    environment{
        //here if you create any variable you will have global access, since it is environment no need of def
        packageVersion = ''
    }
    stages {
        stage('Get version'){
            steps{
                script{
                    def packageJson = readJSON(file: 'package.json')
                    packageVersion = packageJson.version
                    echo "version: ${packageVersion}"
                    env.IMAGE_NAME = "sarthak6700/retail-store-orders:${packageVersion}"
                }
            }
        }


        stage('Build Docker Image') {
            steps {
                script {
                    sh """
                    echo "Building image: ${env.IMAGE_NAME}"
                    cd src/checkout
                    docker build -t "${env.IMAGE_NAME}" .
                    """
                }
            }
        }

        stage('Docker Login') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'dockerhub-creds',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh '''
                    echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin
                    '''
                }
            }
        }

        stage('Push Image') {
            steps {
                script {
                    sh """
                    echo "Pushing image: ${env.IMAGE_NAME}"
                    docker push "${env.IMAGE_NAME}"
                    """
                }
            }
        }

        // stage('Deploy to Kubernetes') {
        //     steps {
        //         script {
        //             sh """
        //             kubectl set image deployment/checkout checkout="${env.IMAGE_NAME}"
        //             """
        //         }
        //     }
        // }

        // stage('Verify Rollout') {
        //     steps {
        //         sh 'kubectl rollout status deployment/checkout'
        //     }
        // }

        // stage('Health Check') {
        //     steps {
        //         sh '''
        //         sleep 10
        //         curl -f http://YOUR_SERVICE_URL/actuator/health
        //         '''
        //     }
        // }
    }

    post {
        failure {
            echo "Deployment failed â€” rolling back..."
            sh 'kubectl rollout undo deployment/checkout || true'
        }
        success {
            script {
                echo "Deployment successful!"
                echo "Deployed image: ${env.IMAGE_NAME}"
            }
        }
        always {
            sh 'docker logout || true'
        }
    }
}